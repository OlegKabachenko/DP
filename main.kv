#:import EMSelector uix.selector.EMSelector
<StandartBoxLayout>:
	md_bg_color: self.theme_cls.surfaceContainerHighestColor 
	radius: [15]				
	orientation: "vertical"	

<ParameterBox>:
	size_hint: 1, None
	adaptive_height: True
	orientation: "vertical"
	#md_bg_color: "red"


<MainLayout>: 	
	md_bg_color: self.theme_cls.backgroundColor	
		 
	MDBoxLayout:
		id: root_box
		
		orientation: "vertical"
		padding: "10dp"
		spacing: "10dp"
			
		StandartBoxLayout:
			id: select_box
			size_hint: 1, 0.2
			spacing: (self.height * 0.05)
			padding: [self.width * 0.03, self.height * 0.05, self.width * 0.03, self.height * 0.05]
			EMSelector:
				id: example_selector						
				items_list: root.example_keys
				default_element_id: root.start_example_id
				on_select: root.handle_example_select(args[1],args[2])

			EMSelector:
				id: method_selector
				items_list:  root.method_keys
				default_element_id: root.start_method_id
				on_select: root.handle_method_select(args[1],args[2])

		StandartBoxLayout:						
			size_hint: 1, 0.4
			ScrollView:					
				size_hint: None, None 
				size: self.parent.size							
				do_scroll_x: False   
				do_scroll_y: True 

				MDBoxLayout:
					id: enter_box
					orientation: "vertical"
					adaptive_height: True
					spacing: 1

					ParameterBox:
						id: limits_params_box
                        LimitParams:
                            id: limits_params

                    ParameterBox:
						id: integral_expr_params_box
                        IntegralExprParams:
                            id: integral_expr_params

					ParameterBox:
						id: extra_integral_params_box

					ParameterBox:
						id: method_params_box
                        IntervalParam

		StandartBoxLayout:	
			id: result_box								
			size_hint: 1, 0.2								

			MDButton:					
				on_release: app.switch_theme_style()
				pos_hint: {"center_x": .5}
				
				MDButtonText:						
					text: "Set theme"
							
		MDButton
			style: "filled"
			MDButtonText:
				text:'Hello'
		