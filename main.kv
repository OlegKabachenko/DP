#:import SelectorBox uix.controlbox.SelectorBox
#:import BottomMessage uix.bottommessage.BottomErrorMessage

<StandartBoxLayout>:
	md_bg_color: self.theme_cls.surfaceContainerHighestColor
	radius: [15]				
	orientation: "vertical"	

<ParameterBox>:
	size_hint: 1, None
	adaptive_height: True
	orientation: "vertical"

<CalculateBtn>:
    pos_hint: {"center_x": .5}
    style: "filled"
    MDButtonText:
        theme_font_size: "Custom"
        font_size: "20sp"
        text:'Розрахувати'

<AnswerLabel>:
    halign: "center"
    valign: "center"
    text: "Відповідь: 223.342"
    theme_font_size: "Custom"
    on_text: self.calculate_font_size()
    on_size: self.calculate_font_size()

<MainLayout>: 	
	md_bg_color: self.theme_cls.backgroundColor	

	MDBoxLayout:
		id: root_box

		orientation: "vertical"
		padding: "10dp"
		spacing: "10dp"

		StandartBoxLayout:
			id: select_box
			size_hint: 1, 0.2
			spacing: (self.height * 0.05)
			padding: [self.width * 0.03, self.height * 0.05, self.width * 0.03, self.height * 0.05]
			SelectorBox:
				id: example_selector
				items_list: root.example_keys
				default_element_id: root.start_example_id
				on_select: root.handle_example_select(args[1],args[2])

			SelectorBox:
				id: method_selector
				items_list:  root.method_keys
				default_element_id: root.start_method_id
				on_select: root.handle_method_select(args[1],args[2])


		StandartBoxLayout:
			size_hint: 1, 0.4

			MDScrollView:
			    id: ssss
				do_scroll_x: False
				do_scroll_y: True


				MDBoxLayout:
					id: enter_box
					orientation: "vertical"
					adaptive_height: True
					spacing: "5sp"

                    ParameterBox:
                        id: formula_box
                        FormulaDisplay:
                            id: formula_display

					ParameterBox:
						id: limits_params_box
                        LimitParams:
                            id: limits_params

                    ParameterBox:
						id: integral_expr_params_box
                        IntegralExprParams:
                            id: integral_expr_params

					ParameterBox:
						id: extra_integral_params_box

					ParameterBox:
						id: method_params_box
                        IntervalParam
                            id: interval_param

		StandartBoxLayout:
		    id: result_box
			size_hint: 1, 0.2
			padding: "10dp"
			spacing: "10dp"

			MDBoxLayout:
			    CalculateBox:
			        id: calculate_box
			        size_hint: 1, 0.5
			        on_btn_click: root.get_integral_value()

		MDButton:
			on_release: app.switch_theme_style()
			pos_hint: {"center_x": .5}
				
			MDButtonText:
		        text: "Set theme"


    BottomErrorMessage:
        id: error_msg


							

		