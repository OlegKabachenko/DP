<SelectButton>:
	size_hint: 0.15, 1
	style: "standard"
	icon: "pencil-outline"	
	font_size: self.height*0.7 if self.width > self.height else self.width*0.7

	color_map: "tertiary"	
	pos_hint: {"center_x": 0.5, "center_y": 0.5}
	
<SFMScroll>:
	size_hint: None, None 
	size: self.parent.size	
	halign: "center" 
	valign: "middle"						
	do_scroll_x: True  
	do_scroll_y: False	
 
<SFMAnchor>:
	size_hint: None, 1
	width: self.parent.width +dp(1)
	anchor_x: 'center'


<SFMArea>:
	md_bg_color: self.theme_cls.surfaceContainerLowColor
	radius: [15]
	
	pos_hint: {"center_x": 0.5, "center_y": 0.5}		
	size_hint: 0.8, 1
	
	canvas.before:
		Color:
			rgba: 0, 0, 0, 0.2					
		BoxShadow:
			pos: root.pos
			size:  root.size[0]/1.005, root.size[1]/1.3
			offset: [dp(root.size[0]*0.4/100), dp(root.size[1]*0.5/100)]
			spread_radius: [0, 0]
			border_radius: [root.radius[0]+dp(5), root.radius[0]+dp(5),root.radius[0]+dp(5),root.radius[0]+dp(5)] 
			blur_radius: dp(root.size[1]/3)
	
<SFMLabel>:
	theme_font_size : "Custom"	
	
	halign: "center" 
	valign: "middle"
	padding: [0,0,0,0]
			
<EMSelector>:
	size_hint: 1, 0.4	
	
	SelectButton:
		id: button												
		on_release: self.build_menu(self, field)		

	SFMArea:	
		id: area				
		SFMLabel:		
			id: field  
			on_text: self.calculate_font_size()			
			on_size: self.calculate_font_size()
