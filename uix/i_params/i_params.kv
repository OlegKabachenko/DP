<ParameterText>:
	mode: "filled"
	required: self.is_required
	pos_hint: {"center_x": 0.5, "center_y": 0.5}
	on_size: self.calculate_font_size()
	
	MDTextFieldHelperText:	
		theme_font_size: "Custom"
		font_size: "15sp"		
		text: "Некоректні дані"	
		mode: "persistent"	#!!!on_error mode changes the text color to black, when user changes app theme from Dark to Light, KiviMD problem
		text_color_focus: [0, 0, 0, 0] 
		text_color_normal:[0, 0, 0, 0]


<StrictParameterText>:
    on_text: self.property_validate(self)

<IntegrandText>:
    on_text: self.property_validate(self, self.get_allowed_symbols())

<BaseLayout>:
	size_hint_y: None
	on_size: self.orientation_check()
	padding: ["30dp",0,"30dp",0]

<LimitParams>:
    MDBoxLayout:
        StrictParameterText:
            id: a
            MDTextFieldHintText:
                text: "a"

    MDBoxLayout:
        StrictParameterText:
            id: b
            MDTextFieldHintText:
                text: "b"

<IntegralExprParams>:
    MDBoxLayout:
        IntegralMltPrText:
            id: integral_mlt
            MDTextFieldHintText:
                text: "Множник інтегралу"

    MDBoxLayout:
        IntegrandText:
            id: integrand
            MDTextFieldHintText:
                text: "Підінтегральний вир."

<BesselParams>:		
	MDBoxLayout:	
		StrictParameterText:
			id: z
			MDTextFieldHintText:
				text: "Аргумент z"			
	MDBoxLayout:
		StrictParameterText:
			id: p
			input_filter: 'int'
			MDTextFieldHintText:
				text: "Порядок ф-ії"	

<IntervalParam>:
	MDBoxLayout:
		StrictParameterText:
			id: n
			input_filter: 'int'
			MDTextFieldHintText:
				text: "Розбиття інтервалу"

				