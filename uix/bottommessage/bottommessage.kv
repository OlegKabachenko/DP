<MessageIcon>:
    theme_font_size: "Custom"
    theme_icon_color: "Custom"
    size_hint: 0.15, 0.4


<ErrorText>:
    padding: "15dp", 0, "16dp", 0
    theme_font_size: "Custom"


<CloseBtn>:
    icon: "close"
    ripple_effect: False
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: 0.15, 0.4
    theme_icon_color: "Custom"
    theme_font_size: "Custom"


<BottomMessage>:
    id: bottom_sheet
    background_color: self.bg_color
    size_hint_y: 0.2
    size_hint_x: 0.9
    swipe_edge_width: 0
    sheet_type: 'modal'


    canvas.before:
        Color:
            rgba: self.theme_cls.outlineColor[:-1]+[0.8]
        RoundedRectangle:
            pos: [self.pos[0]-1, self.pos[1]-7]
            size: [self.size[0]+2, self.size[1]+8]
            radius: [16]

    MDBoxLayout:
        padding: "10dp", 0, "5dp", 0

        MessageIcon:
            icon: root.icon
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            icon_color: root.icon_color

        ErrorText:
            text: root.text
            text_color: root.text_color

        CloseBtn:
            on_release: bottom_sheet.set_state("toggle")
            icon_color: root.close_icon_color